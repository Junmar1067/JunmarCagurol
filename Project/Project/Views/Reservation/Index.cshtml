@model IEnumerable<Project.Models.Reservations>

@{
    ViewBag.Title = "Index";
}
@Html.ActionLink("Home","Home","Admin")
@Html.ActionLink("Logout","Logout","Home")
<br /><br />
<h2>All Reservations</h2>
<br />
<form method="get" action="@Url.Action("Index", "Reservation")">
    <label>Search Book Title or Name </label>
    <input type="text" name="search" />
    <button type="submit">Search</button>
</form>
<br />
@Html.ActionLink("Delete All Reservation", "DeleteAll")
<br />
<table style="width:50%"> 
        <tr>
                <td><b>Res Id</td>
                <td><b>Name</td>
                <td><b>Book Title</td>
                <td><b>Quantity</td>
                <td><b>Reserve Date</td><td></td>
        </tr>
        @foreach (var x in Model)
        {
        <tr>
            <td>@Html.DisplayFor(item => x.Id)</td>
            <td>@Html.DisplayFor(item => x.BorrowersName)</td>
            <td>@Html.DisplayFor(item => x.BookTitle)</td>
            <td>@Html.DisplayFor(item => x.Qty)</td>
            <td>@Html.DisplayFor(item => x.ReserveDate)</td>

            <td>@Html.ActionLink("Delete", "AdminDelete", new { Id = x.Id })</td>
        </tr>
        }
    </table>
